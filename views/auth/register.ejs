<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<% if (typeof error !== 'undefined' && error === 'true') { %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Example usage of SweetAlert
        Swal.fire({
            title: 'Hello',
            text: 'Welcome to my Node.js app!',
            icon: 'info',
            confirmButtonText: 'OK'
        });
    </script>
<% } %>

    <div class="container">
        <h1>Registration Form</h1>
        <form method="post" action="/auth/register">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="username" placeholder="Enter your name">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    
    <!-- Bootstrap JS -->
    <!-- Include popup-js library -->
<script src="https://cdn.jsdelivr.net/npm/popup-js"></script>
<script>
