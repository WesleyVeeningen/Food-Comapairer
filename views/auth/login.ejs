<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <link rel="stylesheet" href="/stylesheets/tailwind.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* Add your custom styles here */
        .bg-stone-700 {
            background-color: #2b3148;
        }

        .text-yellow-500 { 
            color: #fbbf24;
        }

        .form-group label {
            color: #fff;
        }

        .form-group input[type="text"],
        .form-group input[type="password"] {
            background-color: #fff;
            color: #000;
            border-radius: 0.25rem;
            padding: 0.5rem;
        }

        .form-group input[type="text"]:focus,
        .form-group input[type="password"]:focus {
            outline: none;
            box-shadow: 0 0 0 2px #fbbf24;
        }

        .btn-login {
            background-color: #fbbf24;
            color: #fff;
            border: none;
            border-radius: 0.25rem;
            padding: 0.75rem 1rem;
            cursor: pointer;
        }

        .btn-login:hover {
            background-color: #f59e0b;
        }

        .password-toggle {
            position: relative;
        }

    

        .password-toggle .toggle-btn {
            position: absolute;
            top: 45%;
            right: 0.75rem;
            transform: translateY(-50%);
            cursor: pointer;
        }
    </style>
</head>

<body class="bg-stone-700">
    <% if (error) { %>
        <script>
        // Display a SweetAlert2 error alert
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: '<%= error %>'
        }).then(() => {
            // Clear the URL
            window.history.replaceState({}, document.title, "/auth/login");
        });
        </script>
    <% } %>
    
    <div class="fixed">
        <p class="text-white text-3xl m-2">Food<span class="text-yellow-500">Compairer</span></p>
    </div>

    <div class="flex flex-col items-center justify-center h-screen">
        <form method="post" action="/auth/login" class="flex flex-col space-y-5 p-5 border-2 border-white rounded-lg  text-white  w-fit">
            <h1 class="text-4xl font-bold mb-10 text-center">Login</h1>
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" name="username" class="rounded-md form-control text-black">
            </div>
            <div class="form-group password-toggle">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" class="rounded-md form-control mb-5 text-black">
                <span class="toggle-btn" onclick="togglePasswordVisibility()">
                    <i class="fas fa-eye-slash text-black"></i>
                </span>
            </div>
            <button class="border-2 border-white text-white w-full mt-[1.25rem] rounded-lg btn-login">Login</button>
        </form>
        <p class="text-white mt-5">Don't have an account? <a href="/auth/register" class="text-yellow-500">Register</a></p>
        <p class="text-white mt-2">Forgot your password? <a href="/forgot-password" class="text-yellow-500">Reset</a></p>
    </div>


    <script>
    function togglePasswordVisibility() {
        let passwordInput = document.getElementById('password');
        const toggleBtn = document.querySelector('.toggle-btn');
        if (passwordInput && passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleBtn.innerHTML = '<i class="fa-solid text-black fa-eye"></i>';
        } else if (passwordInput) {
            passwordInput.type = 'password';
            toggleBtn.innerHTML = '<i class="fa-solid text-black fa-eye-slash"></i>';
        }
    }
    </script>
</body>

</html>